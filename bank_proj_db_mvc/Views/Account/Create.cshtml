@model bank_proj_db_mvc.Models.Sbaccount;
@* This line specifies that the view expects a model of type Sbaccount from your bank_proj_db_mvc.Models. *@

@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}


<h1>Create an Account</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customername" class="control-label"></label>
                <input asp-for="Customername" class="form-control" />
                @* here Customername is the property name and the Display annotation is automatically fetched and set as the label text in the HTML*@
                <span asp-validation-for="Customername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customeraddress" class="control-label"></label>
                <input asp-for="Customeraddress" class="form-control" />
                <span asp-validation-for="Customeraddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
